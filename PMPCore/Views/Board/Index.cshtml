    function getAllBoardByProjectId() {
        var returnList;
        $.ajax({
            type: "POST",
            url: '@Url.Action("GetAllBoardByProjectId", "Board")',
            data: {},
            dataType: 'json',
            async: false,
            success: function (data) {
                returnList = data;
            },
            error: function (err) {
                swal("hata!");
            }
        });
        return returnList;
    }


      function savePano()
    {
        var panoAdi = $("#modalPanoEklePanoAdi").val();
        var panoId = $("#modalPanoEklePanoId").val();
        var isDescRequired = $("#isDescRequired").prop("checked");

        if(panoAdi == "")
        {
            swal('Pano adı giriniz...');
            return;
        }

        $.ajax({
            type: "POST",
            url: '@Url.Action("SavePano", "Board")',
            data: {
                "_panoAdi": panoAdi,
                "_panoId": panoId,
                "_isDescRequired": isDescRequired
            },
            success: function (data) {
                swal("BAŞARILI!");
                $('#modalProjeEkle').hide();

                $("#modalPanoEklePanoAdi").val('');
                $('#modalPanoEklePanoId').val('0');
                location.reload();
            },
            error: function (err) {
            swal("hata!");
            }
        });
    }


  function preparePanoUpdateModal(_panoId){
    $.ajax({
        type: "POST",
        url: '@Url.Action("GetPanoById", "Board")',
        data: {
            "_boardId": _panoId

        },
        success: function (data) {

          $("#modalPanoEklePanoId").val(_panoId);
          $("#modalPanoEklePanoAdi").val(data["Name"]);
          $("#panoEkleModal").modal('show');
          $("#isDescRequired").prop("checked", data["IsDescriptionRequired"] == 1);
        },
        error: function (err) {
          swal("hata!");
        }
    });
}


function deletePano(_panoId)
{
  var answer = confirm("Silmek istediğinize emin misiniz?");

  if (!answer) {
      return;
  }

   $.ajax({
        type: "POST",
        url: '@Url.Action("DeletePano", "Board")',
        data: {
            "_panoId": _panoId

        },
        success: function (data) {

            if (data == false) {
                swal("Pano silinirken bir hata oluştu!");
            }
            else {
                swal("Pano başarıyla silindi!");

                location.reload();
            }
        },
        error: function (err) {
          swal("hata!");
        }
    });
}

function completeSprint()
{
    var answer = confirm("İşlemi tamamlamak istediğinize emin misiniz?");

    if (!answer) {
        return;
    }

    $.ajax({
            type: "POST",
            url: '@Url.Action("FinishSprint", "Board")',
            data: {
            },
            success: function (data) {
                if(data == -1)
                    swal('Sprint üzerinde çalışıldığı için bitirilemez.');
                else
                {
                    swal('İşlem tamamlandı.');
                    window.location.reload();
                }
