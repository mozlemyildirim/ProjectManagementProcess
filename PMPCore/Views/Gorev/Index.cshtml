                     $('#divGorevEkleAssignedUserSelect').html(html);
                     $('.select2').select2();
                     $('.selectpicker').selectpicker();
                      $('.select2').select2().html(html3);

                },
                error: function (err) {
                  swal("hata!");
                }
            });
