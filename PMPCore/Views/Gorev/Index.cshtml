       function getAllKullanici(isUpdate = true)
       {
            $.ajax({
                type: "POST",
                url: '@Url.Action("GetAllKullanici", "Gorev")',
                data: {},
                success: function (data) {
                     var html = '<select class="selectpicker" data-style="btn btn-info btn-round" title="ATANAN KULLANICIYI SEÇİN">';
